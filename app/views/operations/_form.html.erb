<%= form_for [model, operation] do |f| %>
  <div class="row py-2">
    <div class="col-md-2">
      <%= f.label :number, "Номер", class: "form-label" %>
      <%= f.text_field :number, class: 'form-control' %>
    </div>
    <div class="col">
      <%= f.label :name, "Наименование", class: "form-label" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="row py-2">
    <div class="col">
      <%= f.label :kind, "Тип", class: "form-label" %>
      <%= f.select :kind, OPERATION_KIND, {}, {class: 'form-select'} %>
    </div>
    <div class="col">
      <%= f.label :category, "Разряд", class: "form-label" %>
      <%= f.number_field :category, class: 'form-control' %>
    </div>
    <div class="col">
      <%= f.label :time, "Время", class: "form-label" %>
      <%= f.number_field :time, step: '0.001', class: 'form-control' %>
    </div>
  </div>

  <div class="row py-2">
    <div class="col">
      <%= f.button type: 'submit', class: "btn btn-primary" do %>
        <i class="fas fa-save"></i> Сохранить
      <% end %>
      <%= link_to :back, class: "btn btn-secondary" do %>
          <i class="fas fa-undo-alt"></i> Вернуться
        <% end %>
    </div>
  </div>
<% end %>