<%= form_for user do |f| %>
  <div class="row py-2">
    <div class="col">
      <%= f.label :name, "Имя", class: "form-label" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="col">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="col">
      <%= f.label :team, "Бригада", class: "form-label" %>
      <%= f.text_field :team, class: 'form-control' %>
    </div>
  </div>

  <div class="row py-2">
    <div class="col">
      <div class="form-check">
        <%= f.check_box :admin_role, class: 'form-check-input' %>
        <%= f.label :admin_role, "Администратор", class: "form-label" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="form-check">
        <%= f.check_box :worker_role, class: 'form-check-input' %>
        <%= f.label :worker_role, "Работник", class: "form-label" %>
      </div>
    </div>
  </div>

  <div class="row py-2">
    <div class="col">
      <%= f.button type: 'submit', class: "btn btn-primary" do %>
        <i class="fas fa-save"></i> Сохранить
      <% end %>
      <%= link_to :back, class: "btn btn-secondary" do %>
          <i class="fas fa-undo-alt"></i> Вернуться
        <% end %>
    </div>
  </div>
<% end %>