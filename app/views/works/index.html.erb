<h4>Отчет по выработке <b><%= @production.user_name %></b> за <b><%= @production.date.strftime('%d.%m.%Y') %></b></h4>
<%= form_for [@production, @work], html: {class: "row"} do |f| %>
  <div class='col-auto'>
    <%= f.button type: 'submit', class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i> Добавить модель
    <% end %>
  </div>
  <div class='col-auto'>
    <%= f.select :model_id, Model.all.order(:number).collect {|m| ["#{m.number} - #{m.name}", m.id]}, {}, {class: 'form-select'} %>
  </div>
  <div class='col-auto'>
  	<%= link_to productions_path, class: "btn btn-secondary" do %>
  		<i class="fas fa-undo-alt"></i> Вернуться
	<% end %>
  </div>
<% end %>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th class='text-center'>Модель</th>
      <th class='text-left'>Наименование</th>
      <th class='text-center'>Сумма</th>
      <th class='text-center'>Время</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td class='text-center'><%= work.model.number %></td>
        <td class='text-left'><%= work.model.name %></td>
        <td class='text-center'><%= work.sum %></td>
        <td class='text-center'><%= work.time %></td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>