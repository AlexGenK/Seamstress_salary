<h4>Отредактировать коэффициент премии на <%= l(@bonus.date, format: '%B %Y') %></h4>

<%= form_for [@bonus, @personal] do |f| %>
  <div class="row py-2">
    <div class="col-auto">
      <%= f.label :user_name, "Сотрудник", class: "form-label" %>
      <%= f.text_field :user_name, class: 'form-select', disabled: true %>
    </div>
    <div class="col-auto">
      <%= f.label :report_time, "Отчет", class: "form-label" %>
      <%= f.number_field :report_time, class: 'form-control', disabled: true %>
    </div>
    <div class="col-auto">
      <%= f.label :timesheet_time, "Табель", class: "form-label" %>
      <%= f.number_field :timesheet_time, class: 'form-control', disabled: true %>
    </div>
    <div class="col-auto">
      <%= f.label :execution, "План %", class: "form-label" %>
      <%= f.number_field :execution, class: 'form-control', disabled: true %>
    </div>
    <div class="col-auto">
      <%= f.label :factor, "План %", class: "form-label" %>
      <%= f.number_field :factor, step: '0.01', class: 'form-control' %>
    </div>
  </div>
  <div class="row py-2">
    <div class="col-auto">
      <%= f.button type: 'submit', class: "btn btn-primary" do %>
        <i class="fas fa-save"></i> Сохранить
      <% end %>
      <%= link_to bonus_personals_path(@bonus), class: "btn btn-secondary" do %>
        <i class="fas fa-undo-alt"></i> Вернуться
      <% end %>
    </div>
  </div>
<% end %>