<h2>Коэффициенты премии</h2>
<%= link_to new_factor_path, class: "btn btn-primary" do %>
	<i class="fas fa-plus"></i> Добавить коэффициент
<% end %>
</br>
</br>
<table class="table table-striped table-sm">
	<thead>
		<tr>
			<th>От % (включительно)</th>
			<th>До % (включительно)</th>
			<th>Повышающий коэффициент</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @factors.each do |factor| %>
			<tr>
				<td><%= factor.min %></td>
				<td><%= factor.max %></td>
				<td><%= factor.value.to_f/100 %></td>
				<td></td>
			</tr>
		<% end %>
	</tbody>
</table>