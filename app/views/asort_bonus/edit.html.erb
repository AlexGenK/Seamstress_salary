<h3>Коэффициент премии за ассортимент</h3>
<%= form_for @ab, url: asort_bonus_path, html: {class: "row"} do |f| %>
  <div class='col-auto mb-2'>
    <%= f.button type: 'submit', class: "btn btn-primary" do %>
      <i class="fas fa-save"></i> Изменить коэффициент    
    <% end %>
  </div>
	<div class='col-auto mb-2'>
    <%= f.label :factor, "Коэффициент", class: "col-form-label" %>
  </div>
  <div class='col-auto mb-2'>
    <%= f.number_field :factor, step: '0.0001', class: 'form-control' %>
  </div>
<% end %>