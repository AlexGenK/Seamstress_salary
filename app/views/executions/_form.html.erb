<%= form_for [production, work, execution], html: {class: "row"} do |f| %>
  <div class='col-auto mb-2'>
    <% if style == :edit %>
      <%= f.select :operation_id, @oper_list, {}, {class: 'form-select', disabled: true} %>
    <% else %>
      <%= f.select :operation_id, @oper_list, {include_hidden: false}, {class: 'form-select', multiple: true } %>
    <% end %>
  </div>
  <div class='col-auto mb-2'>
    <%= f.label :quantity, "количество:", class: "col-form-label" %>
  </div>
  <div class='col-auto mb-2'>
    <%= f.number_field :quantity, class: 'form-control' %>
  </div>
  <div class='col-auto mb-2'>
    <%= f.button type: 'submit', class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i> <%= style == :edit ? 'Сохранить' : 'Добавить операцию' %>
    <% end %>
  </div>
  <div class='col-auto mb-2'>
    <%= link_to style == :edit ? production_work_executions_path(production, work) : production_works_path(production), class: "btn btn-secondary" do %>
      <i class="fas fa-undo-alt"></i> Вернуться
  <% end %>
  </div>
<% end %>