<h4>Отчет по выработке <b><%= @production.user_name %></b> за <b><%= @production.date.strftime('%d.%m.%Y') %></b></h4>
<h5>Модель <b><%= "#{@work.model.number} #{@work.model.name}" %></b></h5>
<%= form_for [@production,@work, @execution], html: {class: "row"} do |f| %>
  <div class='col-auto'>
    <%= f.button type: 'submit', class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i> Добавить операцию
    <% end %>
  </div>
  <div class='col-auto'>
    <%= f.select :operation_id, @oper_list, {}, {class: 'form-select'} %>
  </div>
  <div class='col-auto'>
    <%= f.label :quantity, "количество:", class: "col-form-label" %>
  </div>
  <div class='col-auto'>
    <%= f.number_field :quantity, class: 'form-control' %>
  </div>
  <div class='col-auto'>
    <%= link_to production_works_path(@production), class: "btn btn-secondary" do %>
      <i class="fas fa-undo-alt"></i> Вернуться
  <% end %>
  </div>
<% end %>
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th class='text-center'>Операция</th>
      <th class='text-center'>Количество</th>
      <th class='text-center'>Сумма</th>
      <th class='text-center'>Время</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @executions.each do |execution| %>
      <tr>
        <td class='text-center'><%= execution.operation.number %></td>
        <td class='text-center'><%= execution.quantity %></td>
        <td class='text-center'><%= execution.sum %></td>
        <td class='text-center'><%= execution.time %></td>
        <td>
          <div class="btn-group">
            <%= link_to edit_production_work_execution_path(@production, @work, execution), 
              class: "btn btn-outline-dark btn-sm" do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to production_work_execution_path(@production, @work, execution), method: :delete, 
              class: "btn btn-outline-danger btn-sm",
              data: {confirm: "Вы уверенны, что хотите удалить информацию о выполненной операции?"} do %>
              <i class="fas fa-times">&nbsp;</i>
            <% end %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>